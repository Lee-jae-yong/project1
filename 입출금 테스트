#include <iostream>
#include <string>
#include <vector>
#include <map>

using namespace std;



class customer {
	string id;
	double money;
public:
	customer(string id, double money) { this->id = id; this->money = money; };
	customer();

	bool login(string id) {}; //사용자 로그인
	double show() { return money; } //계좌 확인
	double deposit(int price) { return money += price; }; //입금
	double withdwaw(int price) { return money -= price; }; //출력
};

int main() {
	//입출력
	map<string, customer*> mcust;
	map<string, customer*> ::iterator it;//auto it

	cout << "입력 ID :";

	string logid;
	cin >> logid;

	mcust.insert({ logid, new customer("", 0) });

	cout << logid << " 생성완료";

	int choice;
	cout << "로그인 성공. 환영합니다." << logid << " 업무 선택 : 1.잔액 조회		2.입금		3.출금" << endl;
	cin >> choice;
	while (1) {
		switch (choice)
		{
		case 1:  //잔액조회
			cout << it->second->show(money);
		case 2:	//입금
			cout << "입금하실 금액: ";
			double in; cin >> in;
			mcust.insert({ logid, it->second-> deposit(in) });
			cout<<"입금 후 잔액: "<<it->second->show(money);
		case 3: cout<<"출력하실 금액: ";
			double out; cin>>out;
			if(out>it->second->show()) cout<<"잔액 부족";
			else{
			mcust.insert({logid, it->second->withdraw(out)});
			cout<<"출금 후 잔액: "<<it->second->show(money);}
		case 4: //종료
			cout << it->second->getmoney()<<endl;
			cout << "종료"; return 0;
		}
	}
}
