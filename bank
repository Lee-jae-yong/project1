		else {
			int choice;
			cout << "로그인 성공. 환영합니다."<<logid<<" 업무 선택 : 1.잔액 조회		2.입금		3.출금" << endl;
			cin >> choice;
			switch (choice)
			{
			case 1:   cout << mcust[logid]; //잔액 조회
			case 2:				//입금	
			case 3://출금 

			}

		}
		for (it = mcust.begin(); it != mcust.end(); it++)
		{
			
		}
		//입출력
		//종료

	case 2:
		cout << "생성할 ID :";
		string newid;
		cin >> newid;
		mcust.insert(make_pair(newid, 0));


		cout << "";


			//삭제

	case 3:
		return 0;
